<div id="<%= dom_id post %>" class="post-container">
  <p>
    <%= post.title %>
  </p>

  <p>
    <%= post.description %>
  </p>

  <p>
    <%= link_to "", post, class: "post-link" %>
  </p>
  <% post.images.each do |image| %>
    <%= image_tag(image,style: "object-fit: cover; contain; width: 300px; height: 600px;") %>
  <% end %>

</div>
